@model IEnumerable<MDR.Web.Models.Entities.articles>

@{
    ViewBag.Title = "Articles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/Components/DataTables/datatables.min.css" rel="stylesheet" />
<script src="~/Content/Components/DataTables/datatables.min.js"></script>
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        @ViewBag.Title
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">List of @ViewBag.Title</h3>
        </div>
        <div class="box-body">

            <p>
                @Html.ActionLink("Create New", "CreateArticle", null, new { @class = "btn btn-success" })
            </p>
            <table class="table table-striped table-bordered" style="width:100%" id="datatable">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ARTICLE_ID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TITLE)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.VOLUME)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.INIT_PAGE)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FINAL_PAGE)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MAGAZINE)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ISSN)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DATE)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.USER_FK)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FILE_FK)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ARTICLE_TYPE_FK)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DATABASE)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DOI)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.APPROVAL_DATE)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ARTICLE_ID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TITLE)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.VOLUME)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.INIT_PAGE)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FINAL_PAGE)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MAGAZINE)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ISSN)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DATE)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.USER_FK)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FILE_FK)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ARTICLE_TYPE_FK)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DATABASE)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DOI)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.APPROVAL_DATE)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ARTICLE_ID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TITLE)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.VOLUME)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.INIT_PAGE)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FINAL_PAGE)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MAGAZINE)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ISSN)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DATE)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.USER_FK)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FILE_FK)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ARTICLE_TYPE_FK)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DATABASE)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DOI)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.APPROVAL_DATE)
                        </th>
                        <th></th>
                    </tr>
                </tfoot>

            </table>
        </div>
        <div class="overlay" hidden>
            <i class="fa fa-refresh fa-spin"></i>
        </div>
    </div>
</section>

<script>
    $(document).ready(function () {
        $('#datatable').DataTable({
            responsive: true            
        });
    });
     $(document).ajaxStart(function () {
        $(".overlay").show();
    });
    $(document).ajaxStop (function () {
        $(".overlay").hide();
    });

</script>
