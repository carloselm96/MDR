
@{
    ViewBag.Title = "Catalogues";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/Components/DataTables/datatables.min.css" rel="stylesheet" />
<script src="~/Content/Components/DataTables/datatables.min.js"></script>
<script src="~/Content/Components/SweetAlert/sweetalert.js"></script>
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        @ViewBag.Title
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">List of @ViewBag.Title</h3>
                </div>
                <div class="box-body">

                    <p>
                        <button id="create-article" class="btn btn-success">Create Article Type</button>
                    </p>
                    <table class="table table-striped table-bordered display" style="width:100%" id="dt-articletype"></table>
                </div>
            </div>
        </div>
        <div class="col-md-6">

        </div>
    </div>
    <div class="row">
        <div class="col-md-6">

        </div>
    </div>

</section>

<script>
    $(document).ready(function () {
        var dtarticle = $("#dt-articletype");
        $.ajax({
            type: 'POST',
            url: '@Url.Action("GetArticlesTypes")',
            success: function (data) {
                var result = data.success;
                var error = data.error;
                var article_types = data.ArticleTypes;
                if (result) {
                    dtarticle.DataTable({
                        responsive: true,
                        data: article_types,
                        columns: [
                            { "ARTICLE_TYPE_ID": "ARTICLE_TYPE_ID" },
                            { "NAME": "NAME" }
                        ]
                    });
                }
                else {
                    dtarticle.DataTable({
                        responsive: true,
                        data: article_types,
                        columns: [
                            { title: "ARTICLE_TYPE_ID" },
                            { title: "NAME" }
                        ]
                    });
                    swal("There's been a error");
                }
            },
            error: function (error) {
                alert(error)
            }
        });
        $("#create-article").on("click", function () {
            swal({
                title: "Create new type of Article",
                text: "Enter Article Type Name",                
                buttons: true, 
                content: "input"
            })
            .then(name => {
                if (!name) throw null;
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("CreateArticleType")',
                    data: {"name":name},
                    success: function (data) {
                        result = data.success;
                        error = data.error;
                        if (result) {
                            swal("Created correctly!", " Type " + name + " created", "success");
                        }
                        else {
                            swal("There's been an error", "", "error");
                        }
                    }
                })
            })
        })
    });

</script>
